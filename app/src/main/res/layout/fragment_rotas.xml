<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TÃ­tulo -->
        <TextView
            android:text="Cadastro de Rotas"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Campo nome -->
        <EditText
            android:id="@+id/edtNomeRota"
            android:hint="Nome da Rota"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:textColorHint="#777777"
            android:layout_height="wrap_content" />

        <!-- Spinner de condutores -->
        <Spinner
            android:id="@+id/spinnerCondutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- BotÃ£o salvar -->
        <Button
            android:id="@+id/btnSalvarRota"
            android:text="Salvar Rota"
            android:layout_width="match_parent"
            android:backgroundTint="#FFD400"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <!-- TÃ­tulo lista -->
        <TextView
            android:text="Rotas Cadastradas"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Lista de rotas -->
        <ListView
            android:id="@+id/listViewRotas"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:textColor="#000000"
            android:textColorHint="#777777"
            android:layout_marginTop="8dp" />

        <TextView
            android:text="ðŸ’¡ Toque em uma rota para gerenciar alunos"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>